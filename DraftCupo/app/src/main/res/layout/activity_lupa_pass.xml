<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.LupaPassActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="316dp"
        android:layout_centerHorizontal="true"
        android:layout_height="170dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_cup_with_bg" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_btn1"
        android:text="@string/kirim"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/textlog2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="@string/mengalami_masalah_saat_login"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textlog2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/masukkan_username"
        android:textSize="15dp" />

</RelativeLayout>