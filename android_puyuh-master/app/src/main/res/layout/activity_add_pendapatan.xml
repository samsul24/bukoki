<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    tools:context=".Pendapatan.LaporanPendapatanActivity">

    <Button
        android:id="@+id/btnBack_addPendapatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Pendapatan Harian" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/edit_telur"
        android:layout_width="400px"
        android:layout_height="96px"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/ic_form_jml_telur"
        android:textColor="@color/colorText"
        android:layout_marginBottom="20dp" />


    <EditText
        android:id="@+id/edit_harga"
        android:layout_width="400px"
        android:layout_height="96px"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorText"
        android:background="@drawable/ic_form_harga" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorText"
        android:text="Total Pemasukan : Rp. 00000" />

    <Button
        android:id="@+id/btn_submitPendapatan"
        android:layout_width="300px"
        android:layout_height="74px"
        android:layout_gravity="center"
        android:background="@drawable/ic_btn_submit"
        android:layout_marginBottom="50dp"/>

</LinearLayout>